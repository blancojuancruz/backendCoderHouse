{{#if showList }}
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Image URL</th>
        </tr>
    </thead>
    <tbody>
      {{#each list}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
        </tr>
      {{/each}}
    </tbody>
</table>
  {{else}}
    <h5 class="alert-danger rounded p-2">No data available</h5>
{{/if}}