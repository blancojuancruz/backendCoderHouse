doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title PUG Template

  body.container.bg-light
    header
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link(aria-current='page', href='/') Add Product
          |       
          li.nav-item
            a.nav-link(href='/products') Item List
    h2.text-primary.mt-2 New Product
    form(action='/products', method='post')
      .mb-3
        label.form-label(for='title') Title 
        input.form-control(type='text', name='title')
      .mb-3
        label.form-label(for='price') Price
        input.form-control(type='number', name='price')
      .mb-3
        label.form-label(for='thumbnail') Image URL
        input.form-control(type='url', name='thumbnail')
      button.btn.btn-success(type='submit') Add Product 

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')