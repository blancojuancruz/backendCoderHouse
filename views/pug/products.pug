doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title PUG Template

  body.container.bg-light
    header
      ul.nav.nav-tabs
        li.nav-item
          a.nav-link(aria-current='page', href='/') Add Product
        |       
        li.nav-item
          a.nav-link(href='/products') Item List

    h2.text-danger.mt-4 Products
    if content.length === 0
        h5.alert-danger.rounded.p-2 Empty list
    else     
        table.table
            thead
                th(scope='col') ID
                th(scope='col') Title
                th(scope='col') Price
                th(scope='col') Image URL  
            each product in content
                tbody
                    th(scope='row')= producto.id         
                    td= producto.title        
                    td= producto.price      
                    td= producto.thumbnail

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')