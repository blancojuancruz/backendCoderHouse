<!DOCTYPE html>
<html lang="en">
  <%- include('head');%>
  <body class="container bg-light">
    <%- include('navbar');%>
    <h2 class="text-danger mt-4">Products</h2>
    <% if (content.length === 0) { %>
    <h5 class="alert-danger rounded p-2">Empty list</h5>
    <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Image URL</th>
        </tr>
      </thead>
      <tbody>
        <% content.forEach(product => { %>
            <tr>
                <th scope="row"><%= product.id %></th>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.thumbnail %></td>
              </tr>
        <% }); %> 
      </tbody>
    </table>
    <% } %>
    <%- include('scripts');%>
  </body>
</html>